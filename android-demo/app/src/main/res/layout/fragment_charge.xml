<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.caihongzhibo.phonelive2.custom.DrawableTextView
            android:id="@+id/btn_ali"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="60dp"
            android:text="@string/pay_ali"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:drawableSize="40dp"
            app:left_drawable="@mipmap/icon_pay_ali"
            android:layout_marginTop="5dp"
            android:clickable="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"
            />

        <com.caihongzhibo.phonelive2.custom.DrawableTextView
            android:id="@+id/btn_wx"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="60dp"
            android:text="@string/pay_wx"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:drawableSize="40dp"
            app:left_drawable="@mipmap/icon_pay_wx"
            android:clickable="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"
            />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>
